# Property Management System - Caddy Reverse Proxy Configuration
#
# This file configures Caddy as a reverse proxy with automatic HTTPS.
#
# Installation on Ubuntu:
#   apt install -y debian-keyring debian-archive-keyring apt-transport-https
#   curl -1sLf 'https://dl.cloudsmith.io/public/caddy/stable/gpg.key' | gpg --dearmor -o /usr/share/keyrings/caddy-stable-archive-keyring.gpg
#   curl -1sLf 'https://dl.cloudsmith.io/public/caddy/stable/debian.deb.txt' | tee /etc/apt/sources.list.d/caddy-stable.list
#   apt update && apt install caddy -y
#
# Copy this file to /etc/caddy/Caddyfile and reload:
#   sudo systemctl reload caddy
#
# Replace 'your-domain.com' with your actual domain name.

your-domain.com {
    # Reverse proxy to Next.js application
    reverse_proxy localhost:3000 {
        # Health check configuration
        health_uri /api/health
        health_interval 30s
        health_timeout 5s
        health_status 200

        # Headers to pass to the backend
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # HSTS - enforce HTTPS for 1 year including subdomains
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"

        # Clickjacking protection
        X-Frame-Options "DENY"

        # XSS protection (legacy, but still useful)
        X-XSS-Protection "1; mode=block"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"

        # Permissions policy (disable unused features)
        Permissions-Policy "geolocation=(), microphone=(), camera=()"

        # Remove server identification
        -Server
    }

    # Logging
    log {
        output file /var/log/caddy/propertymanagement.log {
            roll_size 10mb
            roll_keep 5
            roll_keep_for 168h
        }
        format json
    }
}

# Redirect www to non-www (optional)
www.your-domain.com {
    redir https://your-domain.com{uri} permanent
}

# Health check endpoint for external monitoring (optional)
# Allows health checks without full domain resolution
:8080 {
    respond /health "OK" 200
}
